<ul class="ul-reset s_mosaique">
    {% for work in collections.realisations | reverse %}

        {% if work.data.mosaiqueTaille == "2-1" %}
            {% set classTailleMosaique =" s_mosaique__2-1" %}
        {% elseif work.data.mosaiqueTaille == "2-2" %}
            {% set classTailleMosaique =" s_mosaique__2-2" %}
        {% else %}
            {% set classTailleMosaique ="" %}
        {% endif %}

        <li class="s_mosaique__item{{ classTailleMosaique }}">
            <a class="s_mosaique__lien" href="{{ work.url | url }}">
                {% if work.data.mosaiqueImage %}
                    {% if work.data.mosaiqueImageExtension == ".svg" %}
                        <img class="s_mosaique__image{{ work.data.mosaiqueClassCss }}" src="{{ metadata.siteUrl }}/images/mosaique/{{ work.data.mosaiqueImage }}.svg" alt="" title="{{ work.data.titre }}">
                    {% else %}
                        <picture class="s_mosaique__image{{ work.data.mosaiqueClassCss }}">
                            <source type="image/webp" srcset="{{ metadata.siteUrl }}/images/mosaique/auto/{{ work.data.mosaiqueImage }}.webp 1x, {{ metadata.siteUrl }}/images/mosaique/auto/{{ work.data.mosaiqueImage }}_2x.webp 2x">
                            <source type="image/avif" srcset="{{ metadata.siteUrl }}/images/mosaique/auto/{{ work.data.mosaiqueImage }}.avif 1x, {{ metadata.siteUrl }}/images/mosaique/auto/{{ work.data.mosaiqueImage }}_2x.avif 2x">
                            <img
                                 src="{{ metadata.siteUrl }}/images/mosaique/{{ work.data.mosaiqueImage }}{{ work.data.mosaiqueImageExtension }}"
                                 srcset=" {{ metadata.siteUrl }}/images/mosaique/{{ work.data.mosaiqueImage }}{{ work.data.mosaiqueImageExtension }} 1x,
                                      {{ metadata.siteUrl }}/images/mosaique/{{ work.data.mosaiqueImage }}_2x{{ work.data.mosaiqueImageExtension }} 2x"
                                 alt=""
                                 title="{{ work.data.titre }}">
                        </picture>
                    {% endif %}
                {% else %}
                    <span class="s_mosaique__texte" title="{{ work.data.titre }}" data-titre="{{ work.data.titre }}">
                        <span aria-hidden="true">{{ work.data.titre }}</span>
                        {{ work.data.titre }}
                        <span aria-hidden="true">{{ work.data.titre }}</span>
                    </span>
                {% endif %}
            </a>
        </li>
    {% endfor %}

</ul>
