{% macro demo_code(demo, code, intro) %}

    {% if intro %}
        <p class="mb-m">
            {{ intro | safe }}
        </p>
    {% endif %}

    <div class="d-flex ai-c jc-c mb-xl">
        <div class="w-50">
            {{ demo | safe }}
        </div>
        <div class="w-50">
            <pre><code class="language-html">{{ code | trim }}</code></pre>
        </div>
    </div>

{% endmacro %}





{% macro code(titre, code) %}

    <h2 class="mb-m tg1-4 ts-xl tw-4">{{ titre }}</h2>

    <div class="mb-xl">
        <pre><code>{{ code | trim }}</code></pre>
    </div>

{% endmacro %}





{% macro table_demo_code(demo, macro, type) %}
    <tr>
        {% if type %}
            <td>
                {{ type | safe }}
            </td>
        {% endif %}
        <td>
            {{ demo | safe }}
        </td>
        <td>
            <pre><code class="language-html">{{ demo | trim }}</code></pre>
        </td>
        <td>
            {% if macro %}
                <pre><code class="language-twig">{{ macro | safe | trim }}</code></pre>
            {% endif %}
        </td>
    </tr>
{% endmacro %}
