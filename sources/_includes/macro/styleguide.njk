{% macro demo_code(demo, code, intro, code2, language) %}

    {% if intro %}
        <p class="mb-m">
            {{ intro | safe }}
        </p>
    {% endif %}

    <div class="mb-xl">

        <div class="mb-s">
            {{ demo | safe }}
        </div>

        {% if code2 %}
            <div class="mb-s">
                <pre><code class="language-html">{{ code | trim }}</code></pre>
            </div>
            <pre><code class="language-twig">{{ code2 | safe | trim }}</code></pre>
        {% else %}
            {% if language %}
                <pre><code class="{{ language }}">{{ code | trim }}</code></pre>
            {% else %}
                <pre><code class="language-html">{{ code | trim }}</code></pre>
            {% endif %}
        {% endif %}

    </div>

{% endmacro %}
